<xml>
	<!-- This file holds info for laying out the Bartok card game. -->
	
	<!-- The multiplier is multiplied by the x and y attributes below. -->
	<!-- This determines how loose or tight the layout is. --> 
	<multiplier x="1" y="1" />
	
	<!-- This positions the draw pile and staggers it -->
	<slot type="drawpile" x="10" y="0" xstagger="0.01" layer="1"/>
	
	<!-- This positions the discard pile -->
	<slot type="yellowDiscardpile" x="-6" y="0" layer="2"/>
	<slot type="blueDiscardpile" x="-3" y="0" layer="2"/>
	<slot type="whiteDiscardpile" x="0" y="0" layer="2"/>
	<slot type="greenDiscardpile" x="3" y="0" layer="2"/>
	<slot type="redDiscardpile" x="6" y="0" layer="2"/>
  
  <!-- This positions the players Placement Piles -->
  <slot type="yellowPlayer1" x="-6" y="-4" player="1" ystagger="-0.5" layer="2"/>
  <slot type="yellowPlayer2" x="-6" y="4" player="2" rot="180" ystagger="0.5" layer="2"/>
  <slot type="bluePlayer1" x="-3" y="-4" player="1" ystagger="-0.5" layer="2"/>
  <slot type="bluePlayer2" x="-3" y="4" player="2" rot="180" ystagger="0.5" layer="2"/>
  <slot type="whitePlayer1" x="0" y="-4" player="1" ystagger="-0.5" layer="2"/>
  <slot type="whitePlayer2" x="0" y="4" player="2" rot="180" ystagger="0.5" layer="2"/>
  <slot type="greenPlayer1" x="3" y="-4" player="1" ystagger="-0.5" layer="2"/>
  <slot type="greenPlayer2" x="3" y="4" player="2" rot="180" ystagger="0.5" layer="2"/>
  <slot type="redPlayer1" x="6" y="-4" player="1" ystagger="-0.5" layer="2"/>
  <slot type="redPlayer2" x="6" y="4" player="2" rot="180" ystagger="0.5" layer="2"/>
  
  <!-- This positions the target card -->
  <slot type="target" x="-1.5" y="0" layer="4"/>
  
  <!-- These slots are for the four hands held by the four players -->
  <slot type="hand" x="0" y="-11.5" rot="0" player="1" layer="3"/>
  <slot type="hand" x="0" y="11.5" rot="180" player="2" layer="3"/>
	
</xml>
	